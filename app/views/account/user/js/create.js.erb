<% if success %>
	createAlert({
		type: "success",
		msg: "<%= msg %>"		
	});
	
	//Reset the form and close the modal
	console.log("Resetting stuff");	
	$("#addUserForm")[0].reset();
	toggleModal("#userModal");	
	
	var html = "<%= u.generateAddHtml current_user %>";
	$("#userTableData").append(html);	
<% else %>
	var msg = "<p><%= msg %>";
		msg += "<ul><li><%= reasons %></li></ul>";
		msg += "</p>";	
	createAlert({
		type: "alert",
		msg: msg
	});	
<% end %>
