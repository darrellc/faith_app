<% if success %>
	$("#confirmDialog").foundation("reveal", "close");
	$("tr[data-id=<%= u.id %>]").fadeOut();
	createAlert({
		type: "success",
		msg: "The user was successfully deleted",
		timeout: 3000
	});
<% else %>
	$("#confirmDialog").foundation("reveal", "close");
	createAlert({
		type: "alert",
		msg: "The user was not deleted.",
		timeout: 3000
	});
<% end %>
