<% if success %>
	toggleModal("#confirmDialog");	
	$("tr[data-id=<%= u.id %>]").velocity("fadeOut");
	
	createAlert({
		type: "success",
		msg: "The user was successfully deleted",
		timeout: 3000
	});
<% else %>
	toggleModal("#confirmDialog");
	createAlert({
		type: "alert",
		msg: "The user was not deleted.",
		timeout: 3000
	});
<% end %>
