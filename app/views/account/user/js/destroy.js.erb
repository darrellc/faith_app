<% if success %>
	toggleModal("#confirmModal");	
	$("#userTableData tr[data-id=<%= u.id %>]").velocity("fadeOut");
	
	createAlert({
		type: "success",
		msg: "The user was successfully deleted",
		timeout: 1000
	});
<% else %>
	toggleModal("#confirmModal");
	createAlert({
		type: "alert",
		msg: "The user was not deleted.",
		timeout: 3000
	});
<% end %>
