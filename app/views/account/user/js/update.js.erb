<% if success %>
	//Close the edit dialog
	createAlert({
		type: "success",
		msg: "<%= msg %>"		
	});
	$("#userTableData").find("tr[data-id=<%= u.id %>]").find("td[data-name=name]").html("<%= u.fullName %>");
	toggleModal("#userModal", "close");	
<% else %>
	//Show the error message.
	createAlert({
		type: "alert",
		msg: "<%= msg %>",
		timeout: 3000		
	});
<% end %>
