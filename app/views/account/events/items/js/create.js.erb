<% if success %>
	createAlert({
		type: "success",
		msg: "<%= msg %>"		
	});
	
	var container = $("<%= i[:container] %>");
	var counter = $(container).children().length + 1;
	
	$("#addItemForm")[0].reset();
	<% options = {:id => data_id}.merge i %>
	var html = "<%= EventItem.new.generateEventItemInfo options %>";
	$(container).append(html);
	//Close the item Modal
	toggleModal("#itemModal", "close");	
	
<% end %>
