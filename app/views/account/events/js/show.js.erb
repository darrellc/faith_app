var dialog = $("#eventModal .modal-dialog");
//Hide all the action divs
$(dialog).children("div").hide();
//Show the the 'show' action div
$(dialog).children("div.show").show();
$(dialog).find(".show").find(".reveal-action").removeClass("active");
//Remove the reveal-actions
$(dialog).find(".show").find(".reveal-action").removeClass("active");
$("#itemShowBox").hide();
$(dialog).find(".show").find(".item-list").empty();

<% if e.isTemplate %>
$(dialog).find(".show").find(".isTemplate").show();
<% else %>
$(dialog).find(".show").find(".isTemplate").hide();
<% end %>

//Set the title
$(dialog).find(".show").find("h3").html("<%= e.name %>");
//Set the html of the paragraph tags
var data = ["<%= e.description %>", "<%= e.timeFormat e.start_time %>", "<%= e.user.fullName %>"];
var p = $(dialog).find(".show").find("p");
for(var i=0;i<p.length;i++){
	$(p[i]).html(data[i]);
}

var itemBox = $(dialog).find(".show").find(".item-list");
var html = "";
<% e.event_items.each do |item| %>
html += "<div class='clearfix bg-ow bdb-g bdc-ccc ev cur-p'>";
	html += "<div class='w-75p bdr-g bdl-g bdc-ccc p-10 fl-l'><%= item.name %></div>";
	html += "<div class='w-25p bdr-g bdc-ccc p-10 fl-l'><%= item.duration %></div>";		 		
html += "</div>";
<% end %>
$(itemBox).append(html);
toggleModal("#eventModal");



